{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "outDir": "build",
      "lib": ["es6", "es7", "dom", "dom.iterable", "esnext"],
      "baseUrl": "src",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "module": "esnext",
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
    },
    "exclude": ["build", "node_modules"],
    "include": ["src"]
  }